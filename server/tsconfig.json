{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@constants": ["src/constants"],
      "@middlewares": ["src/middlewares"],
      "@utils": ["src/utils"],
      "@interfaces": ["src/interfaces"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
